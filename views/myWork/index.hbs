<main id='myWork'>
  <div class='myWork-container'>
    <h3 class='lg-heading about-heading' style="font-size: 10vw;">My <span class='text-secondary'>Projects</span></h3>
    <div style="opacity: 0.2;" class='bg-myWork'></div>
  </div>
</main>

<section class='myWork-section'>
  {{#each portfolio}}
    <article class='myWork-portfolio'>
      <h1>{{this.title}}</h1>
      <p>{{truncate this.description 100}}</p>
      <ul>
        {{#each this.details}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
      <img src={{this.img}} alt=''>
      <a class='btn'  href='/portfolio/details/{{id}}'>See details</a>
    </article>
  {{/each}}

</section>
